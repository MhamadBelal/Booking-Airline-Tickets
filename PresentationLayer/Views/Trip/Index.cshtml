@model List<PresentationLayer.Models.TripAndSced>
<h1>Trips</h1>

@if (Model.Count == 0)
{
    <span>No Items</span>
    if (PresentationLayer.Helper.SessionHelper.IsAdmin)
    {
        <a href="/Trip/CreateTrip" class="btn btn-block"> <input type="button" value="Create A Trip" /></a>
    }
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <td>TripID</td>
                <td>Place From</td>
                <td>Place To</td>
                <td>Actual Depature</td>
                <td>Actual Arrival</td>
                <td>Actual Duration</td>
                <td>Avaliable sets</td>
                <td>Date</td>
                <td>Price</td>
                <td>Trip Name</td>
                <td>Buy A Ticket</td>
                @if (PresentationLayer.Helper.SessionHelper.IsAdmin)
                {
                    <td>edit or delete</td>
                }
            </tr>
        </thead>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.TripId</td>
                <td>@i.PlaceFrom</td>
                <td>@i.placeTo</td>
                <td>@i.Acual_depature</td>
                <td>@i.Acual_Arrival</td>
                <td>@i.Acual_Duration</td>
                <td>@i.AvaliableSets</td>
                <td>@i.DateTrip</td>
                <td>@i.priceTrip</td>
                <td>@i.TripName</td>
                <td><a href="@Url.Action("BuyTicket","Trip",new {id=i.TripId })" class="btn btn-sm btn btn-success">Buy A Ticket</a></td>
                @if (PresentationLayer.Helper.SessionHelper.IsAdmin)
                {
                    <td>
                        <a href="@Url.Action("EidtTrip","Trip",new {id=i.TripId })" class="btn btn-sm btn-success">Edit</a>
                        <a href="@Url.Action("DeleteTrip","Trip",new { id=i.TripId })" class="btn btn-danger">Delete</a>
                    </td>
                }
            </tr>

        }

    </table>
    if (PresentationLayer.Helper.SessionHelper.IsAdmin)
    {
        <a href="/Trip/CreateTrip" class="btn btn-block"> <input type="button" value="Create A Trip" /></a>
    }
}
